import { HorizontalBox, VerticalBox, TabWidget, StandardTableView, GroupBox, StyleMetrics, LineEdit, Button, ListView, TextEdit, ProgressIndicator } from "std-widgets.slint";
import { DownloadData, DownloadItem } from "download-item.slint";
import { Home } from "home.slint";


export component AppWindow inherits Window {
    callback add-url(string);
    callback stop(int);
    callback resume(int);
    callback delete(int);
    callback open(int);
    callback open-folder(int);
    title: "fast-down";
    preferred-height: 500px;
    min-width: 300px;
    in property <[DownloadData]> download-list;
    TabWidget {
        Tab {
            title: @tr("Home");
            Home {
                width: 100%;
                height: 100%;
                download-list: download-list;
                add-url(url) => {
                    add-url(url)
                }
                stop(i) => {
                    stop(i)
                }
                resume(i) => {
                    resume(i)
                }
                delete(i) => {
                    delete(i)
                }
                open(i) => {
                    open(i)
                }
                open-folder(i) => {
                    open-folder(i)
                }
            }
        }

        Tab {
            title: @tr("Settings");
        }

        Tab {
            title: @tr("About");
            VerticalBox {
                Text {
                    text: @tr("About Page");
                }
            }
        }
    }
}
